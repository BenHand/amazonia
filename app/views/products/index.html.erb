<h2 class="col-md-offset-3 col-md-3">All Products</h2>
<h2 class="col-md-offset-3 col-md-3">Your Cart</h2>
<section class="container-fluid">
  <div class="row">
    <%= render partial: 'shared/product', locals: { products: @products, paginate: true } %>
    <div class="col-md-4 well col">
      <div class="row">
        <% if current_user %>
            <%= render partial: 'orders/order', locals: { orders: @current_order, total: @total_price } %>
        <% else %>
            <%= button_to 'Login', new_user_session_path, class: 'btn btn-default' %>
        <% end %>
        <span class="btn btn-primary btn-block">Product Total: $<%= @total_price %>  ||  <%= @current_order.count %> Items Total</span>
      </div>
      <div class="row well">

      </div>
    </div>
  </div>


</section>