<section class="container session">
  <div class="row">
    <div class="col-md-offset-4 col-md-4 well">
      <div class="center">
        <h2 class="center">Sign up</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, value: '', placeholder: 'name' %>
          </div>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, value: '', placeholder: 'email' %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <!--<em>(min <%= @minimum_password_length %> characters)</em>-->
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", placeholder: 'minimum of 8 chars' %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, placeholder: 'passwords must match', autocomplete: "off" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: 'btn btn-success margin-top' %>
          </div>
        <% end %>
        <div class="margin-top"><%= render "devise/shared/links" %></div>
      </div>
    </div>
  </div>
</section>