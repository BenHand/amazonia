<section class="panel panel-default">
  <table class="table">
    <thead>
    <tr>
      <th>Item</th>
      <th class="glyphicon glyphicon-usd"></th>
      <th colspan="3">Quantity</th>
    </tr>
    </thead>
    <tbody>
    <% orders.each do |order| %>
        <tr>
          <td><%= order.product.title %></td>
          <td><%= order.product.price %></td>
          <td>
              <%= link_to "<i class='glyphicon glyphicon-plus-sign'></i>".html_safe,
                        cart_path(current_user.id, order.product.id), method: 'post' %>
              <%= order.quantity %>
              <%= link_to "<i class='glyphicon glyphicon-minus-sign'></i>".html_safe,
                        remove_path(order.id, order.product.id), method: 'put' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to "<span class='btn btn-primary btn-block'>Checkout - Total: $#{@total_price}  ||
    #{orders.sum(:quantity)} Items Total</span>".html_safe, order_path(orders.first.order_id) %>
</section>
