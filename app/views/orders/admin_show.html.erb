<h2 class="center">Order # <%= params[:order_id]%></h2>
<h3 class="center margin-bottom">Status:
  <% if @order.complete %>
    <span>Complete</span>
  <% else %>
    <span>Incomplete</span>
  <% end %>, Customer: <%= @order.user.email %></h3>
<section class="panel panel-default container">
  <table class="table">
    <thead>
    <tr>
      <th>Item</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total</th>
    </tr>
    </thead>
    <tbody>
     <% count = 0 %>
        <% @order.products.each do |product| %>
            <tr>
                <td><%= product.title %></td>
                <td>$ <%= product.price %></td>
                <td><%= @order.order_products[count].quantity %></td>
                <td>$ <%= (@order.order_products[count].quantity * product.price) %></td>
                <% count += 1 %>
            </tr>
        <% end %>
    </tbody>
  </table>
  <br>
</section>